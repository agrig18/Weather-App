<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="flagIconStyle">
        <item name="android:layout_width">@dimen/size_50</item>
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
    </style>

    <style name="spaceStyle">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">@dimen/size_one</item>
        <item name="android:layout_weight">@dimen/unit_weight</item>
    </style>

    <style name="menuIconStyle">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">@dimen/menu_icon_size</item>
        <item name="android:layout_weight">@dimen/unit_weight</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/tab_bar_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="detailsTextStyle">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/unit_weight</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="weatherInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>